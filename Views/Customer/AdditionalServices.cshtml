@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "AdditionalServices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AdditionalServices</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdditionalServices">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerID" />
            <div class="form-group">
                <label asp-for="AdditionalPickUp" class="control-label"></label>
                <input asp-for="AdditionalPickUp" class="form-control" />
                <span asp-validation-for="AdditionalPickUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendPickUpStart" class="control-label"></label>
                <input asp-for="SuspendPickUpStart" class="form-control" />
                <span asp-validation-for="SuspendPickUpStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendPickUpEnd" class="control-label"></label>
                <input asp-for="SuspendPickUpEnd" class="form-control" />
                <span asp-validation-for="SuspendPickUpEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
