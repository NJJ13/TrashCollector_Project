@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Index</h1>

<p>
    <a asp-action="Details">Change Your Info</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeeklyPickupDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalPickUp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr></tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeeklyPickupDay)
        </td>
        <th>
            @Html.DisplayNameFor(model => model.AdditionalPickUp)
        </th>
        <td>
            <a asp-action="CustomerDetails" asp-route-id="@item.CustomerID">Customer Details</a>
        </td>
    </tr>
        }
    </tbody>
</table>

